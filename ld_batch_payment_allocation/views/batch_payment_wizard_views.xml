<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_batch_payment_allocation_wizard_form" model="ir.ui.view">
        <field name="name">batch.payment.allocation.wizard.form</field>
        <field name="model">batch.payment.allocation.wizard</field>
        <field name="arch" type="xml">
            <form string="Batch Payment Allocation">
                <group>
                    <group>
                        <field name="partner_type"/>
                        <field name="partner_id" options="{'no_create': True}"/>
                        <field name="company_id" readonly="1"/>
                    </group>
                    <group>
                        <field name="journal_id"/>
                        <field name="payment_method_line_id" domain="[('journal_id','=',journal_id)]"/>
                        <field name="payment_currency_id"/>
                        <field name="payment_date"/>
                        <field name="communication"/>
                    </group>
                </group>
                <group>
                    <field name=\"line_ids\" widget=\"one2many_list\"/>
    </record>
<record id="view_batch_payment_allocation_wizard_line_tree" model="ir.ui.view">
    <field name="name">batch.payment.allocation.wizard.line.tree</field>
    <field name="model">batch.payment.allocation.wizard.line</field>
    <field name="arch" type="xml">
        <tree editable="bottom">
            <field name="move_id" readonly="1" options="{'no_create': True, 'no_open': False}"/>
            <field name="invoice_date" readonly="1"/>
            <field name="residual_in_payment_currency" readonly="1"/>
            <field name="amount_to_pay"/>
        </tree>
    </field>
</record>
<record id="view_batch_payment_allocation_wizard_line_tree" model="ir.ui.view">
    <field name="name">batch.payment.allocation.wizard.line.tree</field>
    <field name="model">batch.payment.allocation.wizard.line</field>
    <field name="arch" type="xml">
        <tree editable="bottom">
            <field name="move_id" readonly="1" options="{'no_create': True, 'no_open': False}"/>
            <field name="invoice_date" readonly="1"/>
            <field name="residual_in_payment_currency" readonly="1"/>
            <field name="amount_to_pay"/>
            <field name="currency_id" readonly="1"/>
        </tree>
    </field>
</record>
</odoo>