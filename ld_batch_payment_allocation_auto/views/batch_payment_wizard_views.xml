<odoo>
<data>
<record id="view_batch_payment_allocation_wizard_form" model="ir.ui.view">
        <field name="name">batch.payment.allocation.wizard.form</field>
        <field name="model">batch.payment.allocation.wizard</field>
        <field name="arch" type="xml">
            <form string="Batch Payment Allocation">
                <group>
                    <field name="partner_id"/>
                    <field name="partner_type"/>
                </group>
                <field name="line_ids">
                    <list editable="bottom">
                        <field name="move_id"/>
                        <field name="amount_due" readonly="1"/>
                        <field name="amount_to_pay"/>
                        <field name="currency_id" invisible="1"/>
                    </list>
                </field>
                <footer>
                    <button name="action_register_payment" string="Register Payment" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</data>
</odoo>
